{% extends 'modelos/baseModelo.html.twig' %}

{% block body %}
	
    <h1 class="title"> Pilotos Ferrari Formula 1</h1>
	<div class="modelos-list">

		{% for piloto in pilotos %}

			<div class="modelos-list__card">
                {# Driver info #}  
				<a href="{{ path('pilotoDetalle', {"id": piloto.id}) }}" class="modelos-list__card__name"> {{piloto.nombre}} </a>              
                <div class="modelos-list__card__text">
                    <p class="modelos-list__card__text">Campeonatos: {{piloto.titulos}}</p> 
                </div>
         

               {# Show drivers for each car #}
               {% if piloto.modelos|length > 0 %} 
               {# {{dump(modelo.pilotos)}} #}
                <div> 
                    <p>Modelos: </p>  
                    <ul>
                        {% for modelo in piloto.modelos %}
                            <li class="modelos-list__card__pilotos"><a href="{{ path('modeloDetalle', {"id": modelo.id}) }}">{{modelo.nombre}} </a></li>
                        {% endfor %}
                    </ul>
                </div>
               {% endif %}
            
                {# Driver image #}
                 <img class="modelos-list__card__img" src={{piloto.imagen}}> 
                
            </div>
            
        {% endfor %}

	</div>
	{% endblock %}  
    